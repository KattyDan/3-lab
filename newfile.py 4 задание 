class BankAccount:
    def __init__(self):
        self._balance = 0
        self._transactions = []
    
    def deposit(self, amount):
        self._balance += amount
        self._transactions.append(f"+{amount}")
    
    @property
    def balance(self):
        return self._balance

# Пример использования
acc = BankAccount()
acc.deposit(100)
print("Баланс:", acc.balance)